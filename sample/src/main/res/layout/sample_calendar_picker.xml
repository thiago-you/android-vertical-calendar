<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

          <Button
              android:id="@+id/button_range"
              style="@style/CustomButton.Secondary"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:enabled="false"
              android:text="@string/Range" />
          
            <Button
                android:id="@+id/button_single"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Single" />

            <Button
                android:id="@+id/button_multi"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Multi" />

            <Button
                android:id="@+id/button_highlight"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Highlight" />

            <Button
                android:id="@+id/button_display_only"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DisplayOnly" />

            <Button
                android:id="@+id/button_dialog"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Dialog" />

            <Button
                android:id="@+id/button_customized"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Customized" />

            <Button
                android:id="@+id/button_decorator"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Decorator" />

            <Button
                android:id="@+id/button_hebrew"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Hebrew" />

            <Button
                android:id="@+id/button_arabic"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Arabic" />

            <Button
                android:id="@+id/button_arabic_with_digits"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ArabicDigits" />

            <Button
                android:id="@+id/button_custom_view"
                style="@style/CustomButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CustomView" />

        </LinearLayout>

    </HorizontalScrollView>

    <you.thiago.calendarvertical.CalendarVertical
        android:id="@+id/calendar_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        app:calendarvert_months_title="@array/months_array"
        android:scrollbarStyle="outsideOverlay" />
    
    <Button
        android:id="@+id/done_button"
        style="@style/CustomButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Done" />

</LinearLayout>
